@model MvcApplication2.Models.Workers

@{
    ViewBag.Title = "Edit";
}

<h2>EditWorker</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Workers</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.login)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.login)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fio)
            @Html.ValidationMessageFor(model => model.fio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.workExp)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.workExp)
            @Html.ValidationMessageFor(model => model.workExp)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.salary)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.salary)
            @Html.ValidationMessageFor(model => model.salary)
        </div>

        <p>
            <input type="submit" value="Save changes" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to list",  "SelectWorker")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
