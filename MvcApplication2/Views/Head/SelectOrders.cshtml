@model IEnumerable<MvcApplication2.Models.Orders>

@{
    ViewBag.Title = "SelectOrders";
}

<h2>SelectOrders</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataCreate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idWorker)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataCreate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idWorker)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditOrder", new {  IdOrder=item.IdOrder  }) |
