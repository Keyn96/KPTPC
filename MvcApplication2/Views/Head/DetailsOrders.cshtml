@using MvcApplication2.Models
@model MvcApplication2.Models.Orders

@{
    ViewBag.Title = "Information about the Order";
}

<h2>DetailsOrder</h2>

<fieldset>
    <legend>Order</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.IdOrder)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IdOrder)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.dataCreate)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.dataCreate)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.status)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.status)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.idWorker)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.idWorker)
    </div>
    <table>
    <tr>
        <th>
            IdMaterial
        </th>
        <th>
            name
        </th>
        <th>
           weight
        </th>
        <th>
           manufacturer
        </th>
        <th>
            cost
        </th>
        <th>
            quantity
        </th>
        <th></th>
    </tr>

@foreach (Material m in Model.Material)
{
    <tr>
        <td>
            @m.IdMaterial
        </td>
        <td>
            @m.name
        </td>
        <td>
            @m.weight
        </td>
        <td>
            @m.manufacturer
        </td>
        <td>
            @m.cost
        </td>
        <td>
            @m.quantity
</td>
    </tr>
}

</table>
</fieldset>
<p>
    @Html.ActionLink("Edit", "EditOrder", new {  IdOrder=Model.IdOrder  }) |
    @Html.ActionLink("Back to list", "SelectOrders")
</p>
