@using MvcApplication2.Models
@model MvcApplication2.Models.Orders

@{
    ViewBag.Title = "CreateOrder";
}

<h2>CreateOrder</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Orders</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdOrder)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IdOrder)
            @Html.ValidationMessageFor(model => model.IdOrder)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dataCreate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dataCreate)
            @Html.ValidationMessageFor(model => model.dataCreate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.status)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.status)
            @Html.ValidationMessageFor(model => model.status)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idWorker)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idWorker)
            @Html.ValidationMessageFor(model => model.idWorker)
        </div>
        <div class="editor-label"><b>Material</b></div>
        @{
    List<Material> material = ViewBag.Material;
    foreach (Material c in material)
            {
                <input type="checkbox" name="mat" value="@c.IdMaterial"
               @(Model.Material.Contains(c) ? "checked=\"checked\"" : "") />@c.name    @c.manufacturer<br />
            }
        }
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
