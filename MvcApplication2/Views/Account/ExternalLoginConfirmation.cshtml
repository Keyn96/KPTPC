@model MvcApplication2.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Registration";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Link your account to @ViewBag.ProviderDisplayName.</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Form of binding</legend>
        <p>
            You have been tested through <strong>@ViewBag.ProviderDisplayName</strong>.
            Enter the login.
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="Registration" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
